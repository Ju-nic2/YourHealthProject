<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Logo"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/username"
            android:layout_width="272dp"
            android:layout_height="205dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="-2dp"
            android:layout_toEndOf="@+id/imageView"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="Your Health"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#3FC8BB"
            android:textColorHighlight="#FFFFFF"
            android:textSize="60sp" />

        <ImageView
            android:id="@+id/logoimage"
            android:layout_width="142dp"
            android:layout_height="205dp"
            app:srcCompat="@drawable/sample" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="당신의 정보를 알려주세요"
            android:textColor="#2D2C2C"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/uesrName"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:hint="이름"
            android:inputType="textPersonName"
            android:saveEnabled="false"
            android:text="이름"
            android:textColor="#000000"
            android:textColorHint="#454545" />

        <ImageView
            android:id="@+id/userphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="256dp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            app:srcCompat="@drawable/samplemini" />

        <RadioGroup
            android:id="@+id/sexSelect"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="95dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/maleBtn"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:buttonTint="#3FC8BB"
                android:fontFamily="@font/custom"
                android:text="남"
                android:textColor="#989696"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/femaleBtn"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:buttonTint="#3FC8BB"
                android:fontFamily="@font/custom"
                android:text="여"
                android:textColor="#989696"
                android:textSize="20sp" />
        </RadioGroup>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/custom"
        android:gravity="center"
        android:text="운동 분야 설정"
        android:textColor="#2D2C2C"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <CheckedTextView
            android:id="@+id/deit"
            android:layout_width="25dp"
            android:layout_height="57dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/disablebutton"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="#다이어트"
            android:textColor="#989696"
            android:textSize="17sp" />

        <CheckedTextView
            android:id="@+id/strength"
            android:layout_width="25dp"
            android:layout_height="57dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/disablebutton"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="#스트렝스"
            android:textColor="#989696"
            android:textSize="17sp" />

        <CheckedTextView
            android:id="@+id/bulkup"
            android:layout_width="25dp"
            android:layout_height="57dp"
            android:layout_gravity="fill_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/disablebutton"
            android:fontFamily="@font/custom"
            android:gravity="center|fill"
            android:text="#벌크업"
            android:textColor="#989696"
            android:textSize="17sp" />

        <CheckedTextView
            android:id="@+id/pumping"
            android:layout_width="25dp"
            android:layout_height="57dp"
            android:layout_weight="1"
            android:background="@drawable/disablebutton"
            android:checkMarkTint="#989696"
            android:checkMarkTintMode="src_over"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="#근비대"
            android:textColor="#989696"
            android:textSize="17sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/custom"
        android:gravity="center"
        android:text="운동 할수있는 장소 선택"
        android:textColor="#2D2C2C"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/workoutwhere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <CheckedTextView
            android:id="@+id/hometraining"
            android:layout_width="1dp"
            android:layout_height="57dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/disablebutton"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="#홈트"
            android:textColor="#989696"
            android:textSize="15sp" />

        <CheckedTextView
            android:id="@+id/healthplace"
            android:layout_width="8dp"
            android:layout_height="57dp"
            android:layout_gravity="fill_vertical"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/disablebutton"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="#헬스장"
            android:textColor="#989696"
            android:textSize="15sp" />

        <CheckedTextView
            android:id="@+id/bothplace"
            android:layout_width="26dp"
            android:layout_height="57dp"
            android:layout_weight="1"
            android:background="@drawable/disablebutton"
            android:checkMarkTint="#989696"
            android:checkMarkTintMode="src_over"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="#둘다"
            android:textColor="#989696"
            android:textSize="15sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/nextBtn2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|clip_vertical"
            android:layout_marginBottom="6dp"
            android:background="@drawable/buttonchange"
            android:clickable="false"
            android:enabled="false"
            android:fontFamily="@font/custom"
            android:text="저장"
            android:textColor="#000000"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>
